<core:FragmentDefinition xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <DatePicker id="contractStartDate" visible="{= ${ui>/editMode} === 'Editable'}" value="{path: 'dateStart', type: 'sap.ui.model.odata.type.Date', formatOptions: {pattern: 'yyyy-MM'}}"/>
