{
    "requires": {
        "db": {
            "[development]": {
                "kind": "sqlite",
                "credentials": {
                    "url": "db.sqlite"
                }
            },
            "kind": "hana"
        }
    },
    "log": {
        "levels": {
            "sqlite": "debug",
            "hana": "debug"
        }
    },
    "auth": "basic",
    "build": {
        "target": "database/gen",
        "tasks": [
            {
                "for": "hana",
                "src": "database/db",
                "dest": "./db",
                "options": {
                    "model": [
                        "index.cds",
                        "database/db/hana"
                    ]
                }
            }
        ]
    }
}
